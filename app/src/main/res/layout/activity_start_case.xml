<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="10px"
    android:paddingRight="10px"
    tools:context=".StartCase">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="378dp"
        android:layout_height="125dp"
        android:layout_marginTop="36dp"
        android:clickable="false"
        android:gravity="center|center_horizontal"
        android:text="The Law Offices of Alan LeVar"
        android:textAllCaps="true"
        android:textColor="#FC000000"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="351dp"
        android:layout_height="121dp"
        android:layout_marginTop="24dp"
        android:padding="5px"
        android:paddingLeft="5px"
        android:paddingTop="5px"
        android:paddingRight="5px"
        android:text="Welcome. We are glad you are here and that you have chosen us to represent you. This app allows you to help us win your case. The information you provide here makes a difference. Let's work together and get you the compensation your deserve."
        android:textColor="#FC000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:background="#0E6698"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="#FC000000"
        android:textColorHint="#FDFCFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="#0E6698"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="#FC000000"
        android:textColorHint="#FDFCFD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName" />

    <Button
        android:id="@+id/submit"
        android:layout_width="134dp"
        android:layout_height="50dp"
        android:layout_marginBottom="120dp"
        android:onClick="startTheCase"
        android:text="Submit"
        android:textColor="#FFFFFF"
        app:backgroundTint="#7E8083"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName"
        app:layout_constraintVertical_bias="0.868" />

</androidx.constraintlayout.widget.ConstraintLayout>