<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingLeft="10px"
    android:paddingRight="10px"
    tools:context=".StartCase">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="378dp"
        android:layout_height="125dp"
        android:layout_marginTop="36dp"
        android:clickable="false"
        android:gravity="center|center_horizontal"
        android:text="The Law Offices of Alan LeVar"
        android:textAllCaps="true"
        android:textColor="#FC000000"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="351dp"
        android:layout_height="121dp"
        android:layout_marginTop="24dp"
        android:padding="5px"
        android:paddingLeft="5px"
        android:paddingTop="5px"
        android:paddingRight="5px"
        android:text="Welcome. We are glad you are here and that you have chosen us to         represent you. This app allows you to help us win your case. The information you provide here makes a difference. Let's work together and get you the compensation your deserve."
        android:textColor="#FC000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="353dp"
        android:layout_height="69dp"
        android:padding="10px"
        android:text="Fill out the form below with your name, birthday, and keycode. If you don't know your one-time keycode please call our office."
        android:textColor="#FC000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="#FC000000"
        android:textColorHint="#FC000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:maxLength="20"
        android:textColor="#FC000000"
        android:textColorHint="#FC000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName" />

    <EditText
        android:id="@+id/keycode"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="keycode"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textColor="#FC000000"
        android:textColorHint="#FC000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <EditText
        android:id="@+id/month"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Month"
        android:inputType="textPersonName"
        android:maxLength="2"
        android:textColor="#FC000000"
        android:textColorHint="#FC000000"
        app:layout_constraintEnd_toStartOf="@+id/day"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <EditText
        android:id="@+id/year"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:ems="10"
        android:hint="Year"
        android:inputType="textPersonName"
        android:maxLength="4"
        android:textColor="#FC000000"
        android:textColorHint="#FC000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toEndOf="@+id/day" />

    <EditText
        android:id="@+id/day"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="Day"
        android:inputType="textPersonName"
        android:maxLength="2"
        android:textColor="#FC000000"
        android:textColorHint="#FC000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/month"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="134dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:onClick="startTheCase"
        android:text="Submit"
        android:textColor="#FFFFFF"
        app:backgroundTint="#7E8083"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/keycode"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>